<h1><%= @cocktail.name %></h1>

<% if @cocktail.doses == [] %>
  <p> No doses yet...</p>
<% else %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> | <%= dose.ingredient_id %> -- <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete this dose?" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= simple_form_for [ @cocktail, @dose ] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>

<p><%= link_to "Back to list", cocktails_path %></p>